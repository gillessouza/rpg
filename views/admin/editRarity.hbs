{{#each errors}}
  <div class="alert alert-danger">{{warnings}}</div>
{{/each}}

<h2>Edit Rarity</h2>
<hr>
<form action="/admin/rarity/edit" method="POST">
  <div class="card">
    <div class="card-body">
      <input type="hidden" name="id" value="{{rarity.id}}"/>
      <label class="col-form-label">Name:</label>
      <input type="text" class="form-control" id="name" name="name" value="{{rarity.name}}"/>
      <button type="submit" class="btn btn-success mt-4">Update</button>
    </div>
  </div>
</form>
